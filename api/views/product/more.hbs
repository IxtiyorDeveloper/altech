<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-flex mb-3">
                    <a href="/product/" 
                        class="ml-2 btn btn-primary mr-2">
                            <i class="fas fa-arrow-left"></i>
                    </a>
                    <h2 class="ml-2">{{title}}</h2>
                </div>
                
                
                <div class="row justify-content-center ml-2 mt-2" >
                    <div class="col-xl-6 col-sm-12 form-floating">
                        <div class="col-xl-12 col-sm-12 mb-3 form-floating images d-flex flex-wrap-wrap">
                            {{#each product.photos}}
                                <img src="/{{this}}" alt="" width="100" height="100" class="img">
                                    
                            {{/each}}       
                        </div>
                        <div class="mt-3">  
                            <hr> 
                            <h6 class="mb-3">Описание</h6>
                            <p>{{product.descriptions}}</p>
                        </div>
                        
                    </div>
                    <div class="col-xl-6 col-sm-12 mb-3 form-floating">
                        <table class="table table-hover">
                                <tr><th>Субкатегория</th><td>{{product.subcategory.title}}</td></tr>
                                <tr> <th>Бренд</th><td>{{product.brend.title}}</td></tr>
                                {{#each product.atribut}}
                                    {{#if spec}}
                                        <tr><th>{{atr.title}}</th><td>{{spec}}</td></tr>
                                    {{/if}}
                                {{/each}}
                                <tr><th>Цена</th><td>{{product.price}} сум</td></tr>
                                <tr><th>Статус</th><td>{{{product.status}}}</td></tr>
                                <tr><th>Порядковый номер</th><td>{{{product.order}}}</td></tr>
                        </table>
                            
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .img {
        margin-right: 20px;
    }
    .images  {
        width: 100%;
        flex-wrap: wrap;
        justify-content: center;
    }
    .images :first-child {
        width: 400px;
        height: 400px;
        margin-bottom: 20px;
        margin-left: 200px;
        margin-right: 200px;
        
    }
</style>