<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-5">
                    <div class="d-flex align-items-center">
                        <a href="/viktorina/"
                           class="ml-2 btn btn-primary mr-2">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                        <h3 class="ml-2 mb-0">{{title}}</h3>
                    </div>
                    <div>
                        <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#static">
                            <i class="fas fa-activity"></i>Статистика
                        </button>
                    </div>
                </div>

                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Имя фамилия</th>
                        <th scope="col">Номер телефона</th>
                        <th scope="col">Адрес</th>
                        <th scope="col">Инстаграм аккаунт</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each viktorina.players}}
                        <tr>
                            <td>{{index}}</td>
                            <td>{{name}}</td>
                            <td>{{phone}}</td>
                            <td>{{region}}</td>
                            <td>{{account}}</td>

                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="static" tabindex="-1" aria-labelledby="static" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Статистика викторина {{title}}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <div class="card-body">

                                <canvas id="statjs" data-id="{{viktorina._id}}">Your browser does not support the canvas element.</canvas>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>