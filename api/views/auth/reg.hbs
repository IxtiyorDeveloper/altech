<div class="row justify-content-md-center">
   <div class="col-md-12 col-lg-4">
      <div class="card login-box-container">
         <div class="card-body">
            <div class="authent-text">
               <h5 class="card-title">Регистрация</h5>
            </div>
            <form action="/auth/reg" method="post">
               <input type="hidden" name="_csrf" value="{{csrf}}">
               <div class="mb-3">
                  <div class="form-floating">
                        <input type="text" name="name" class="form-control" id="floatingInput" placeholder="Fullname">
                        <label for="floatingInput">Имя</label>
                     </div>
               </div>
               <div class="mb-3">
                  <div class="form-floating">
                        <input type="email" name="email" class="form-control" id="floatingInput1" placeholder="name@example.com">
                        <label for="floatingInput">Адрес почты</label>
                     </div>
               </div>
               <div class="mb-3">
                  <div class="form-floating">
                        <input type="password" name="pass" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Пароль</label>
                     </div>
               </div>
               <div class="mb-3">
                  <div class="form-floating">
                        <input type="number" name="phone" class="form-control" id="floatingPassword1" placeholder="Confirm Password">
                        <label for="floatingPassword">Номер телефона</label>
                     </div>
               </div>
               <div class="d-grid">
               <button type="submit" class="btn btn-primary m-b-xs">Регистрация</button>
            </div>
            </form>
            <div class="authent-login">
                  <p>Есть аккаунт? <a href="/auth/login">Авторизация</a></p>
               </div>
         </div>
      </div>
   </div>   
</div>

