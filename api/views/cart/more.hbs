<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-center mb-4">
                    <h5 class="card-title">{{cart.name}}</h5>
                </div>
                <div class="row">
                    <div class="col-xl-9 col-sm-12 mb-3 form-floating">
                        <table class="table table-hover">
                                <tr><th>Номер телефона</th><td>{{cart.phone}}</td></tr>
                                <tr> <th>Aдрес</th><td>{{cart.adress}}</td></tr>
                                <tr><th>Статус</th><td>{{{cart.status}}}</td></tr>
                        </table>
                    </div>
                    <div class="col-xl-3 col-sm-12 mb-3 form-floating text-right">
                        <div class="flex-column d-flex">
                            <button  class="btn btn-primary mb-2">
                                <i class="fas fa-clock"></i> Рассматривается
                            </button>
                            <button  class="btn btn-danger mb-2">
                                <i class="fas fa-times"></i> Отказать
                            </button>
                            <button  class="btn btn-success mb-2">
                                <i class="fas fa-check"></i> Принять
                            </button>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-center ml-2">
                    <h6 class="card-title">Заказы</h6>
                </div>
                <table class="table table-hover" id="protable">
                    <thead>
                        <tr>
                            <th scope="col">Название</th>
                            <th scope="col">Субкатегория</th>
                            <th scope="col">Бренд</th>
                            <th scope="col">Цена</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="tbodyy">
                        {{#each cart.product}}
                        <tr>
                            <td>
                                <img src="/{{img}}" alt="" width="40">
                                {{title}}

                            </td>
                            <td>{{subcategory.title}}</td>
                            <td>{{brend.title}}</td>
                            <td>{{price}} сум</td>
                            <td>{{{status}}}</td>
                            <td class="text-right">
                                <a href="" 
                                    onclick="return confirm('Вы уверены?')" 
                                    class="ml-2 btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>