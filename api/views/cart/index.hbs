<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-flex mb-3">
                    <h5 class="card-title">{{title}}</h5>
                </div>
                <table class="table table-hover" id="protable">
                    <thead>
                        <tr>
                            <th scope="col">№</th>
                            <th scope="col">Имя и фамилия</th>
                            <th scope="col">Номер телефона</th>
                            <th scope="col">Продукт</th>
                            <th scope="col">Aдрес</th>
                            <th scope="col">Статус</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="tbodyy">
                        
                        {{#each carts}}
                        <tr>
                            <td>{{index}}</td>
                            <td>{{name}}</td>
                            <td>{{phone}}</td>
                            <td>
                                {{#each product}}
                                    <span>{{id.title}} x <b>{{count}} шт</b></span>.
                                {{/each}}
                            </td>
                            <td>{{adress}}</td>
                            <td>{{{status}}}</td>
                            <td class="text-right d-flex">
<!--                                <button onclick="edit('{{_id}}')" data-bs-toggle="modal" data-bs-target="#upcart" class="btn btn-warning ml-2">-->
<!--                                    <i class="fas fa-pen"></i>-->
<!--                                </button>-->
                                <a href="/cart/doc/{{_id}}"
                                   class="ml-2 btn btn-success">
                                    <i class="fas fa-file"></i>
                                </a>
                                <a href="/cart/delete/{{_id}}"
                                   onclick="return confirm('Вы уверены?')"
                                   class="ml-2 btn btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

