<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Список сотрудники</h5>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Имя и фамилия</th>
                            <th scope="col">Номер телефона</th>
                            <th scope="col">Email</th>
                            <th scope="col">Пол</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{phone}}</td>
                            <td>{{email}}</td>
                            <td>{{gender}}</td>
                            <td class="text-right">
                                <a href="/users/edit/{{_id}}" class="btn btn-warning ml-2">
                                    <i class="fas fa-pen"></i></a>
                                <a href="/users/delete/{{_id}}" 
                                    onclick="return confirm('Вы уверены?')" 
                                    class="ml-2 btn btn-danger">
                                        <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>